#include <stdio.h>
#include <stdlib.h>

#define MAX 100

int stack1[MAX], stack2[MAX];
int top1 = -1, top2 = -1;

int isEmpty(int s){
    if(s == 1)
        return top1 == -1;
    else
        return top2 == -1;
}

int isFull(int s){
    if(s == 1)
        return top1 == MAX-1;
    else
        return top2 == MAX-1;
}

void push(int s, int value){
    if(isFull(s)){
        printf("Overflow\n");
        return;
    }

    if(s == 1)
        stack1[++top1] = value;
    else
        stack2[++top2] = value;

    printf("Pushed %d into Stack %d\n", value, s);
}

int pop(int s){
    if(isEmpty(s)){
        printf("Underflow\n");
        return -1;
    }

    if(s == 1)
        return stack1[top1--];
    else
        return stack2[top2--];
}

int peek(int s){
    if(isEmpty(s)){
        printf("Underflow\n");
        return -1;
    }

    if(s == 1)
        return stack1[top1];
    else
        return stack2[top2];
}

void display(int s){
    if(isEmpty(s)){
        printf("Underflow\n");
        return;
    }

    printf("Stack %d elements (Top to Bottom):\n", s);

    if(s == 1){
        for(int i = top1; i >= 0; i--)
            printf("%d ", stack1[i]);
    }
    else{
        for(int i = top2; i >= 0; i--)
            printf("%d ", stack2[i]);
    }
    printf("\n");
}

int main(){
    int choice, s, val, res;

    while(1){
        printf("\n1. Push\n");
        printf("2. Pop\n");
        printf("3. Peek\n");
        printf("4. Display\n");
        printf("5. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch(choice){

            case 1:
                printf("Enter Stack Number (1 or 2): ");
                scanf("%d", &s);
                printf("Enter Value: ");
                scanf("%d", &val);
                push(s, val);
                break;

            case 2:
                printf("Enter Stack Number (1 or 2): ");
                scanf("%d", &s);
                res = pop(s);
                if(res != -1)
                    printf("Popped %d from Stack %d\n", res, s);
                break;

            case 3:
                printf("Enter Stack Number (1 or 2): ");
                scanf("%d", &s);
                res = peek(s);
                if(res != -1)
                    printf("Top element of Stack %d is %d\n", s, res);
                break;

            case 4:
                printf("Enter Stack Number (1 or 2): ");
                scanf("%d", &s);
                display(s);
                break;

            case 5:
                exit(0);

            default:
                printf("Invalid choice!!!!\n");
        }
    }

    return 0;
}
