#include<stdio.h>
 int convertoctaltodecimal(int octalnum){
 while(octalnum !=0){
    int rem = octnum%10;
    decnum+= rem *base;
    base*=8;
    octalnum/=10;
 }
 return decnum;
}
int convertdecimaltobinary(int decnum){
    int bin=0;place=1;
    while(decnum !=0){
        int rem = decnum %2;
        bin+=rem*place;
        place *=10;
        decnum /=2;
    }
    return bin;
}
int main(){
